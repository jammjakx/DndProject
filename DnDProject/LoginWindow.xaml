<Window x:Class="DnDProject.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DnDProject"
        mc:Ignorable="d"
        Title="LoginWindow" Height="300" Width="300">
    <Grid>
        <Button x:Name="button2" Content="Login" HorizontalAlignment="Left" Margin="100,144,0,0" VerticalAlignment="Top" Width="106" Click="button_Click"/>
        <Label x:Name="label" Content="Username" HorizontalAlignment="Left" Margin="32,57,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label1" Content="Password" HorizontalAlignment="Left" Margin="32,92,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Username" HorizontalAlignment="Left" Height="23" Margin="137,57,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="Password" HorizontalAlignment="Left" Height="23" Margin="137,95,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="Register" HorizontalAlignment="Left" Margin="100,169,0,0" VerticalAlignment="Top" Width="106" Click="Button_Click_2"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="100,194,0,0" VerticalAlignment="Top" Width="106" Click="Button_Click_1"/>

    </Grid>
</Window>
